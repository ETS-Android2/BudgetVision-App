<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowIsTranslucent="true"
    android:background="@drawable/popup_background">

    <ImageButton
        android:id="@+id/closePopupBtn3"
        android:layout_width="21dp"
        android:layout_height="20dp"
        android:background="@android:color/transparent"
        android:cropToPadding="false"
        android:onClick="closeActivity"
        android:src="@android:drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginDetailsLabel"
        android:layout_width="366dp"
        android:layout_height="222dp"
        android:layout_marginTop="100dp"
        android:fontFamily="serif"
        android:text="@string/successful_login"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#01579B"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginSuccessLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif-monospace"
        android:text="LOGIN SUCCESSFUL"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#228F05"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/loginDetailsLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userSpreadsheetLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#0645AD"
        android:textSize="12sp"
        android:autoLink="web"
        android:visibility="visible"
        android:linksClickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginDetailsLabel" />

    <ImageView
        android:id="@+id/spreadsheetImage"
        android:layout_width="248dp"
        android:layout_height="292dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/spreadsheet" />


</androidx.constraintlayout.widget.ConstraintLayout>